<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="madtilhjemlose.MVVM.View.User.Default.MainPage" >

    <VerticalStackLayout Padding="10" Margin="10" WidthRequest="400" Spacing="10">

        <Image Source="logo.png" 
               WidthRequest="180"
               Aspect="AspectFit" 
               SemanticProperties.Description="Logo"/>
       
        <Label Text="Customer" 
               HorizontalTextAlignment="Center" 
               FontSize="22" 
               BackgroundColor="LightSeaGreen" 
               TextColor="White"/>
        <Button Text="Logout" Command="{Binding LogoutCommand}" WidthRequest="250" BackgroundColor="LightSeaGreen" TextColor="White" />
        <Button Text="View Contract" Command="{Binding ViewContractCommand}" WidthRequest="250" BackgroundColor="LightSeaGreen" TextColor="White" />
        <Button Text="View Last Order" Command="{Binding ViewLastOrderCommand}" WidthRequest="250" BackgroundColor="LightSeaGreen" TextColor="White" />
        <Button Text="New Order" Command="{Binding NewOrderCommand}" WidthRequest="250" BackgroundColor="LightSeaGreen" TextColor="White" />
    </VerticalStackLayout>
</ContentPage>