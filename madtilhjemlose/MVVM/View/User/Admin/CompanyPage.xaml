<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="madtilhjemlose.MVVM.View.User.Admin.CompanyPage"
             >

        <StackLayout Margin="10" Padding="80"  Spacing="10">

        <Image Source="jjmstore.png" 
               HeightRequest="185"
               Aspect="AspectFit" 
               SemanticProperties.Description="Logo"/>
        <Label Text="Companies" 
               FontSize="22"
               HorizontalTextAlignment="Center" BackgroundColor="Coral" TextColor="White"/>
        <Grid RowDefinitions="*, *"
             ColumnDefinitions="*, *"
             BackgroundColor="WhiteSmoke"
             Padding="30" ColumnSpacing="2" 
             RowSpacing="10" Grid.Row="5"
             >
            
            <Label Text="Search a Company" FontSize="18" FontFamily="Calibri"
             Grid.Column="0" Grid.Row="1" />
            <SearchBar Placeholder="SÃ¸g efter navn eller adresse" 
                       Grid.Column="1" Grid.Row="1" 
                       WidthRequest="240" 
                       HorizontalTextAlignment="Start" >
            </SearchBar>
        </Grid>
        <Grid RowDefinitions="*, *, *, *, *, *"
              ColumnDefinitions="*, *, *, *" 
              BackgroundColor="Gainsboro"
              Padding="10" ColumnSpacing="10" 
              RowSpacing="10" Grid.Row="5">
            <Label Text="FirmaID" Grid.Column="0" Grid.Row="2" HorizontalTextAlignment="Center"/>
            <Label Text="FirmaNavn" Grid.Column="1" Grid.Row="2" HorizontalTextAlignment="Center"/>
            <Label Text="FirmaAdress" Grid.Column="2" Grid.Row="2" HorizontalTextAlignment="Center"/>
            <!--
            <Button Text="Search" Command="{Binding SearchCommand}" WidthRequest="100" Grid.Column="3" BackgroundColor="WhiteSmoke" TextColor="Black"/>
            -->
            
         </Grid>

        <!--SearchBar x:Name="searchBar" Text="Search"
                   SearchCommand="{Binding PerformSearch}"
                 SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
           <ListView x:Name="searchResults"
                 ItemsSource="{Binding SearchResults}"-->



    </StackLayout>
</ContentPage>